$C = "../Common.ui";

$C.@PageOverlay {}

$C.@Container {
  Anchor: (Width: 920, Height: 720);

  #Title {
    Group {
      $C.@Title {
        @Text = "HYPERKS COSMETICS";
      }

      $C.@HeaderSearch {}
    }
  }

  #TopBar {
    LayoutMode: Left;

    Label {
      Text: "ACTIVE";
      Anchor: (Width: 70);
      Style: (
        RenderUppercase: true,
        FontSize: 10,
        TextColor: #7a9cc6
      );
    }

    Label #ActiveEffect {
      FlexWeight: 1;
      Style: (
        RenderBold: true,
        FontSize: 14,
        TextColor: #ffffff
      );
    }

    Label #ActiveCount {
      Anchor: (Width: 180);
      Style: (
        FontSize: 12,
        TextColor: #95b6df
      );
    }
  }

  #Content {
    Anchor: (Top: 8);
    LayoutMode: Left;

    Group #TabList {
      Anchor: (Width: 240);
      LayoutMode: TopScrolling;
      ScrollbarStyle: $C.@DefaultScrollbarStyle;
    }

    Group #CosmeticList {
      FlexWeight: 1;
      LayoutMode: TopScrolling;
      ScrollbarStyle: $C.@DefaultScrollbarStyle;
    }
  }

  #Footer {
    Anchor: (Top: 8);
    Label #HintLine {
      Text: "";
      Style: (
        FontSize: 11,
        TextColor: #ffffff(0.65),
        RenderItalics: true
      );
    }
  }
}

$C.@BackButton {}
