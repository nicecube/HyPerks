$C = "../Common.ui";

$C.@PageOverlay {}

$C.@Container {
  Anchor: (Width: 920, Height: 720);

  #Title {
    Group {
      $C.@Title {
        @Text = "HYPERKS COSMETICS";
      }

      $C.@HeaderSearch {}
    }
  }

  #Content {
    LayoutMode: Top;

    Group #TopBar {
      Anchor: (Height: 26);
      LayoutMode: Left;

      Label {
        Text: "ACTIVE";
        Anchor: (Width: 70);
        Style: (
          RenderUppercase: true,
          FontSize: 10,
          TextColor: #7a9cc6
        );
      }

      Label #ActiveEffect {
        FlexWeight: 1;
        Style: (
          RenderBold: true,
          FontSize: 14,
          TextColor: #ffffff
        );
      }

      Label #ActiveCount {
        Anchor: (Width: 180);
        Style: (
          FontSize: 12,
          TextColor: #95b6df,
          HorizontalAlignment: End
        );
      }
    }

    Group {
      Anchor: (Height: 8);
    }

    Group {
      FlexWeight: 1;
      LayoutMode: Left;

      Group #TabList {
        Anchor: (Width: 240);
        LayoutMode: TopScrolling;
        ScrollbarStyle: $C.@DefaultScrollbarStyle;
      }

      Group {
        Anchor: (Width: 10);
      }

      Group #CosmeticList {
        FlexWeight: 1;
        LayoutMode: TopScrolling;
        ScrollbarStyle: $C.@DefaultScrollbarStyle;
      }
    }

    Group {
      Anchor: (Height: 8);
    }

    Label #HintLine {
      Text: "";
      Style: (
        FontSize: 11,
        TextColor: #ffffff(0.65),
        RenderItalics: true
      );
    }
  }
}

$C.@BackButton {}
